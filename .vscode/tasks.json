{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "g++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "-pedantic",
                /* include path */
                "-I${workspaceFolder}\\include\\GLFW\\include",
                /* .cpp files */
                "${workspaceFolder}\\src\\Application.cpp",
                /* output */
                "-o",
                "${workspaceFolder}\\bin\\Application.exe",
                /* library path */
                "-L${workspaceFolder}\\include\\GLFW\\lib-mingw",
                /* libraries */
                //"-lopengl32",
                "-lglfw3dll"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/bin/Application.exe",
            "dependsOn": [
                "build"
            ]
        }
    ]
}